@model Knygu_rezervacijos.Models.Skaitytojas

@{
    ViewData["Title"] = "Registracija";
}

<h1>Registruotis:</h1>

<hr />
<div class="row">
    <div class="col-md-4 ">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group registracijoslaukelis">
                <label asp-for="Vardas" class="control-label">Vardas</label>
                <input asp-for="Vardas" class="form-control" />
                <span asp-validation-for="Vardas" class="text-danger"></span>
            </div>
            <div class="form-group registracijoslaukelis">
                <label asp-for="Pavarde" class="control-label">Pavardė</label>
                <input asp-for="Pavarde" class="form-control" />
                <span asp-validation-for="Pavarde" class="text-danger"></span>
            </div>
            <div class="form-group registracijoslaukelis">
                <label asp-for="PazymejimoIsdavimoData" class="control-label"> Pažymėjimo išdavimo data</label>
                <input asp-for="PazymejimoIsdavimoData" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="PazymejimoIsdavimoData" class="text-danger"></span>
            </div>
            <div class="form-group registracijoslaukelis">
                <label asp-for="Slaptazodis" class="control-label">Slaptažodis</label>
                <input type="password" asp-for="Slaptazodis" class="form-control" />
                <span asp-validation-for="Slaptazodis" class="text-danger"></span>
            </div>
            <div class="form-group registracijoslaukelis">
                <label asp-for="PakartotiSlaptazodi" class="control-label">Pakartoti slaptažodį</label>
                <input type="password" asp-for="PakartotiSlaptazodi" class="form-control" />
                <span asp-validation-for="PakartotiSlaptazodi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
